<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cocktailData"
            type="com.example.hammered.cocktail.CocktailData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".cocktail.CocktailDetailFragment">

        <TextView
            android:id="@+id/cocktailDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{cocktailData.cocktail_name}"
            tools:text="Hamburger" />

        <TextView
            android:id="@+id/cocktailDetailsDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{cocktailData.cocktail_description}"
            tools:text="Make a pizza" />

        <ImageView
            android:id="@+id/cocktailDetailImage"
            android:contentDescription="@string/cocktail_detail_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:imageSource="@{cocktailData.cocktail_image}"/>
    </LinearLayout>
</layout>
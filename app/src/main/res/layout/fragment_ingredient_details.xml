<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.hammered.ingredients.ingredientDetails.IngredientDetailsViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".cocktail.cocktailDetails.CocktailDetailFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/detail_ingredient_edit"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/edit_cocktail"
                    android:src="@drawable/ic_edit" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ingredientDetailImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_details_image_height"
                android:layout_margin="16dp"
                android:contentDescription="@string/cocktail_detail_desc"
                android:foregroundGravity="center"
                android:scaleType="fitCenter"
                app:imageSource="@{viewModel.currentIngredient.ingredient_image}"
                tools:src="@drawable/summer_food" />

            <TextView
                android:id="@+id/ingredientDetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{viewModel.currentIngredient.ingredient_name}"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/color_black"
                tools:text="Hamburger" />

            <TextView
                android:id="@+id/ingredientDetailsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/detail_text_back"
                android:padding="8dp"
                android:text="@{viewModel.currentIngredient.ingredient_description}"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="Make a pizza.\nMake more for everyone" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ingredientDetailRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/details_ingredient_item" />
        </LinearLayout>
    </ScrollView>
</layout>